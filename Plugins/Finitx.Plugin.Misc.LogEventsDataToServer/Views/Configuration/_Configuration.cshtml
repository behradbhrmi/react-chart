
@model FinitxLogDataSetting

<div class="card-body">

   
    <div class="form-group row">
        
        <div class="col-md-9">
            <button  @(Model.NeedOrderSync?"":"disabled") onclick="getapi()" type="button" name="sync_orders" class="btn btn-primary">
               Sync Orders
            </button>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="Username" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="Username" asp-required="true" asp-value="@Model.Username" />
            <span asp-validation-for="Username"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="Password" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="Password" asp-required="true" asp-value="@Model.Password" />
            <span asp-validation-for="Password"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="LoginToken" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="LoginToken" asp-required="true" asp-value="@Model.LoginToken" />
            <span asp-validation-for="LoginToken"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="LoginApiUrl" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="LoginApiUrl" asp-required="true" asp-value="@Model.LoginApiUrl" />
            <span asp-validation-for="LoginApiUrl"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="PurchaseNotifyUrl" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="PurchaseNotifyUrl" asp-required="true" asp-value="@Model.PurchaseNotifyUrl" />
            <span asp-validation-for="PurchaseNotifyUrl"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="BaseUrl" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="BaseUrl" asp-required="true" asp-value="@Model.BaseUrl" />
            <span asp-validation-for="BaseUrl"></span>
        </div>
    </div>
   
    <div class="form-group row">
        <div class="col-md-9 offset-md-3">
            <div class="input-group input-group-short">
                <div class="input-group-text">
                    <button type="submit" name="save" class="btn btn-primary">
                        @T("Admin.Common.Save")
                    </button>
                </div>

            </div>
        </div>
    </div>


</div>
<script >
    async function getapi() {
        var url = "/Admin/FinitxLogDataSetting/SyncOrders";
        // Storing response
        const response = await fetch(url);

        // Storing data in form of JSON
        var data = await response.json();
        location.reload();
    }
</script>